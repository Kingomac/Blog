---
type Props = {
  rootClass: string;
};

const { rootClass = "" } = Astro.props;
---

<menu-button class={rootClass}>menu</menu-button>

<script>
  class MenuButton extends HTMLElement {
    constructor() {
      super();
    }

    connectedCallback() {
      this.addEventListener("click", this.handleClick);
    }

    handleClick() {
      const tableOfContents: HTMLElement = document.querySelector(".toc");
      tableOfContents.style.display =
        tableOfContents.style.display != "none" ? "none" : "block";
    }
  }

  customElements.define("menu-button", MenuButton);
</script>
