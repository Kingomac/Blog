---
import { type MarkdownInstance } from "astro";
import { type PostFrontmatter } from "../pages/posts/PostFrontmatter";
import Tag from "./Tag.astro";

interface Props {
  post: MarkdownInstance<PostFrontmatter>;
}

const { post } = Astro.props;
---

<article>
  <header>
    <h2>{post.frontmatter.title}</h2>
    <span>{post.frontmatter.description}</span>
  </header>
  <ul>
    {
      post.frontmatter.tags.map((i) => (
        <li>
          <Tag name={i} />
        </li>
      ))
    }
  </ul>
  <time datetime={post.frontmatter.pubDate}
    >{new Date(post.frontmatter.pubDate).toLocaleDateString()}</time
  >
  <a href={post.url}></a>
</article>

<style>
  article {
    display: grid;
    justify-content: space-around;
    grid-template-columns: 90%;
    grid-template-rows: 4fr 1fr;
    width: 262px;
    height: 300px;
    border: solid 1px var(--accent);
    background-color: #20414d;
    color: white;

    > a {
      width: 262px;
      height: 300px;
      position: absolute;
    }

    > header {
      display: grid;
      justify-content: center;
      height: auto;
      background-color: transparent;
      > span {
        width: 100%;
        text-align: start;
        display: -webkit-box;
        -webkit-line-clamp: 6;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-align: justify;
      }

      > h2 {
        text-align: center;
        font-size: larger;
      }
    }

    > ul {
      padding: 0;
      text-align: center;
      list-style-type: none;
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      > li {
        font-size: small;
      }
    }

    > time {
      text-align: end;
      font-size: smaller;
    }
  }
</style>
